{
  "name": "@common/contracts",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "tsc -b -v",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "peerDependencies": {
    "@nestjs/swagger": "11.2.5"
  },
  "dependencies": {
    "@nestjs/mapped-types": "2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "typeorm": "0.3.28"
  },
  "devDependencies": {
    "@common/eslint-config": "*",
    "@common/typescript-config": "*",
    "@types/node": "^22.10.7",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
